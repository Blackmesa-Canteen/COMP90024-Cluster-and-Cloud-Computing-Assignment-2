user nginx;

worker_processes auto;
error_log logs/error.log error;
pid logs/nginx.pid;

events {
    worker_connections  1024;
}

http {
    include       mime.types;
    default_type  application/octet-stream;
	log_format combined '$remote_addr - $remote_user [$time_local] '
                    '"$request" $status $body_bytes_sent '
                    '"$http_referer" "$http_user_agent"';			
	access_log logs/access.log combined;
    sendfile        on;
    keepalive_timeout  65;

    server {
        listen      80;
        server_name  localhost;

        location / {
            root   /dist;
            index  index.html;
        }
		
		location /backend/ {
			proxy_pass {{groups['backend'][0]}}:{{BACKEND_PORT}}; # backend node 1 url(http://ip:port)
		}

		location /backend2/ {
			proxy_pass {{groups['backend'][1]}}:{{BACKEND_PORT}}; # backend node 2 url(http://ip:port)
		}

        location /backend3/ {
			proxy_pass {{groups['backend'][2]}}:{{BACKEND_PORT}}; # backend node 3 url(http://ip:port)
		}

        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
            root   html;
        }
    }
}